{
   "background": {
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Facebook and Messenger Notifications"
   },
   "description": "Notifications for Facebook and Messenger.",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "manifest_version": 2,
   "name": "Facebook and Messenger Notifications",
   "optional_permissions": [ "background" ],
   "options_page": "options.html",
   "permissions": [ "tabs", "notifications", "http://www.facebook.com/", "https://www.facebook.com/", "http://www.messenger.com/", "https://www.messenger.com/" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "3.0.0",
   "web_accessible_resources": [ "icon48.png" ]
}
